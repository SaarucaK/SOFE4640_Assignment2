<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <TextView
        android:id="@+id/labelUpdateTable"
        android:layout_width="191dp"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"
        android:text="Update:"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/oldLongitude"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/oldLatitude"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Old Latitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/newLatitude"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/oldAddress"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="224dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Old Address"
        app:layout_constraintEnd_toEndOf="@+id/oldLongitude"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/newLatitude"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/oldLongitude"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="152dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Old Longitude"
        app:layout_constraintEnd_toEndOf="@+id/oldLatitude"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newLatitude"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="New Latitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newLongitude"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="424dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="New Longitude"
        app:layout_constraintEnd_toEndOf="@+id/newLatitude"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/newLatitude"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newAddress"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="496dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="New Address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelTo"
        android:layout_width="190dp"
        android:layout_height="54dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="188dp"
        android:text="To:"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/newLongitude"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="308dp"
        android:layout_height="61dp"
        android:layout_marginTop="608dp"
        android:layout_marginEnd="52dp"
        android:text="Update"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>